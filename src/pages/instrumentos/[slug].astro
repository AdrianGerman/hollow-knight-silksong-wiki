---
import Layout from "@/layouts/Layout.astro"
import "../../styles/global.css"
import Background from "@/components/Background.astro"
import { getCollection, getEntry } from "astro:content"

export async function getStaticPaths() {
  const docs = await getCollection("instrumentos")
  return docs.map((d) => ({ params: { slug: d.slug } }))
}

const { slug } = Astro.params
const entry = await getEntry("instrumentos", slug!)
if (!entry) return Astro.redirect("/instrumentos")

const { data } = entry
const { Content } = await entry.render()

const colorLabel =
  data.color === "rojo"
    ? "ğŸŸ¥ Roja"
    : data.color === "azul"
      ? "ğŸŸ¦ Azul"
      : data.color === "amarillo"
        ? "ğŸŸ¨ Amarilla"
        : null

const typeLabel =
  data.type === "activa" ? "Activa" : data.type === "pasiva" ? "Pasiva" : null
---

<Layout title={data.title}>
  <Background />

  <section class="mx-auto max-w-4xl px-4 pt-10 pb-4">
    <nav class="mb-3 text-sm text-white/60">
      <a href="/" class="hover:underline">Inicio</a>
      <span class="mx-2">/</span>
      <a href="/instrumentos" class="hover:underline">Instrumentos</a>
      <span class="mx-2">/</span>
      <span class="text-white/80">{data.title}</span>
    </nav>

    <h1 class="font-[Cinzel] text-3xl md:text-5xl text-white">{data.title}</h1>

    <p class="mt-2 text-white/70">{data.excerpt}</p>

    <div class="mt-3 flex flex-wrap gap-2">
      {
        colorLabel && (
          <span class="text-[11px] px-2 py-1 rounded-full border border-white/10 text-white/80 bg-white/[0.03]">
            {colorLabel}
          </span>
        )
      }

      {
        typeLabel && (
          <span class="text-[11px] px-2 py-1 rounded-full border border-white/10 text-white/70 bg-white/[0.02]">
            {typeLabel}
          </span>
        )
      }

      {
        data.obtained && (
          <span class="text-[11px] px-2 py-1 rounded-full border border-white/10 text-white/70 bg-white/[0.02]">
            {data.obtained}
          </span>
        )
      }

      {
        Array.isArray(data.tags) &&
          data.tags.map((t) => (
            <span class="text-[11px] px-2 py-1 rounded-full border border-white/10 text-white/70 bg-white/[0.02]">
              {t}
            </span>
          ))
      }
    </div>
  </section>

  {
    data.cover?.src && (
      <div class="mx-auto max-w-4xl px-4">
        <img
          src={data.cover.src}
          alt={data.cover.alt ?? data.title}
          class="w-full rounded-2xl border border-white/10 bg-white/[0.02]"
          loading="lazy"
        />
      </div>
    )
  }

  <section class="mx-auto max-w-4xl px-4 py-8">
    <article class="prose prose-invert max-w-none">
      <Content />
    </article>
  </section>

  <section class="mx-auto max-w-4xl px-4 pb-10">
    <a
      href="/instrumentos"
      class="inline-flex items-center gap-2 rounded-xl border border-white/10 bg-white/[0.03] px-4 py-2 text-sm hover:bg-white/[0.06]"
    >
      â† Volver a Instrumentos
    </a>
  </section>
</Layout>
