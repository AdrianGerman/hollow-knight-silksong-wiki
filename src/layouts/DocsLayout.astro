---
import Nav from "@/components/Nav.astro"
import Sidebar from "@/components/Sidebar.astro"
import Search from "@/components/Search.astro"
const { title } = Astro.props
---

<Nav />
<main
  class="mx-auto max-w-7xl px-4 md:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-[260px,1fr] gap-6 py-8"
>
  <aside class="md:sticky md:top-6 h-max"><Sidebar /></aside>
  <section class="min-w-0">
    <div class="card p-6">
      {title && <h1 class="hl-title text-3xl md:text-4xl mb-2">{title}</h1>}
      <Search />
      <article class="prose-hk mt-6"><slot /></article>
    </div>
  </section>
</main>
