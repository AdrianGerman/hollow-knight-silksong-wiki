---
const { images = [] } = Astro.props
---

<div class="grid grid-cols-2 md:grid-cols-3 gap-3">
  {
    images.map((img) => (
      <figure class="card overflow-hidden">
        <img
          src={img.src}
          alt={img.alt}
          loading="lazy"
          class="w-full h-full object-cover"
        />
        {img.caption && (
          <figcaption class="px-3 py-2 text-xs text-[--color-ink-muted]">
            {img.caption}
          </figcaption>
        )}
      </figure>
    ))
  }
</div>
